<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">
    <link rel="stylesheet" href="~/css/userInterface.css" />
    <link rel="stylesheet" href="~/css/chatSupport.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <!-- Parent Container -->
    <section class="parent-container-userInterface">
        <!-- Child Container -->
        <article class="child-container-userInterface">
            <!-- UdeM Logo Container -->
            <div class="udm-img-container-userInterface">
                <img src="~/images/logo-udem.png" alt="" class="img-udem-userInterface" />
            </div>

            <!-- Search Box -->
            <div class="search-container">
                <div class="input-container">
                    <input type="text" class="search-input-userInterface" placeholder="Tap here to search">
                    <img src="~/images/ic-search.png" alt="" class="ic-search-userInterface" />
                </div>
            </div>

            <!-- Description and Profile Container -->
            <div class="description_profile-container-userInterface">
                <!-- Greeting -->
                <div class="greeting-container-userInterface">
                    <h2 class="title-greeting-container-userInterface">Welcome Back! 👋</h2>
                </div>

                <!-- User Profile -->
                <div class="user_profile-img-container-userInterface">
                    <img src="~/images/gatito.jpg" alt="" class="img-profile-userInterface" />
                </div>
            </div>
        </article>

        <!-- Scond Container -->
        <article class="second-container-userInterface">
            <!-- Navbar Containr -->
            <div class="navbar-container-userInterface">
                <!-- Navbar and list -->
                <ul class="navbar-list-container-userInterface">
                    <li class="list-userInterface">
                        <a class="link-navbar-userInterface" asp-controller="Home" asp-action="UserInterface"><i class="uil uil-estate" id="ic-userInterface"></i> Home</a>
                    </li>
                    <li class="list-userInterface">
                        <a href="#contenido-categories" class="link-navbar-userInterface"><i class="uil uil-book-alt" id="ic-userInterface"></i> Categories</a>
                    </li>
                    <li class="list-userInterface">
                        <a href="#contenido-wishList" class="link-navbar-userInterface"><i class="uil uil-bookmark" id="ic-userInterface"></i> Wish List</a>
                    </li>
                    <li class="list-userInterface">
                        <a href="#contenido-profile" class="link-navbar-userInterface"><i class="uil uil-user" id="ic-userInterface"></i> Profile</a>
                    </li>
                    <li class="list-userInterface">
                        <a href="#contenido-settings" class="link-navbar-userInterface"><i class="uil uil-setting" id="ic-userInterface"></i> Settings</a>
                    </li>
                    <li class="list-userInterface">
                        <a class="link-navbar-userInterface" asp-controller="Home" asp-action="chatSupport"><i class="uil uil-comment-dots" id="ic-userInterface"></i> Chat Support</a>
                    </li>
                    <li class="list-userInterface">
                        <a href="#contenido-logOut" class="link-navbar-userInterface"><i class="uil uil-signout" id="ic-userInterface"></i> Log Out</a>
                    </li>
                </ul>
            </div>
            <!-- Books Interface -->
            <article class="chat-parent-chatSupport-userInterface">
                <!-- Chat Support Container -->
                <div class="chat-container">
                    <div class="chat-header">
                        <div class="img-container-userInterface">
                            <img src="~/images/logo_chatSupport.png" alt="" class="img-logo-chatSupport-userInterface"/>
                        </div>
                        <div class="titles-container-chatSupport-userInterface">
                            <h2 class="title-chatSupport-userInterface">UdeM Chat</h2>
                            <h4 class="title2-chatSupport-userInterface">Online</h4>
                        </div>
                    </div>
                    <div class="chat-body"></div>
                    <div class="chat-input">
                        <div class="input-sec">
                            <input type="text" id="txtInput" placeholder="Write your concern here ..." autofocus class="input-chatSupport-userInterface" />
                        </div>
                        <div class="send">
                            <img src="~/images/send.png" alt="send" class="img-send-chatSupport-userInterface"/>
                        </div>
                    </div>
                </div>
            </article>
        </article>
    </section>
    <script src="~/js/userInterface.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/answers.js"></script>
</body>
</html>